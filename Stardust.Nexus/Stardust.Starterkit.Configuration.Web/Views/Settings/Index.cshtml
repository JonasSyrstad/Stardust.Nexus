@model Stardust.Starterkit.Configuration.Repository.Settings
@{
    ViewBag.Title = "Options";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Options</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.MasterEncryptionKey, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MasterEncryptionKey, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MasterEncryptionKey, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Regenerate" class="btn btn-default" />
        </div>
    </div>
}<table class="table table-responsive table-hover table-striped table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                ConfigSet
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SiteEncryptions)
        {
            <tr>
                <td>@item.Site.Id</td>
                <td>@Html.ActionLink("View key","Key",new {id=item.Site.Id})</td>
            </tr>
        }
    </tbody>
   

</table>
